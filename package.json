{
  "name": "leekpulse",
  "displayName": "LeekPulse",
  "description": "A zero-overhead, real-time internet latency monitor that checks your connection health every second. Developed by LeekMind.",
  "version": "0.0.1",
  "publisher": "leekmind",
  "author": {
    "name": "Ahmad Shatnawi"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "leekpulse.toggle",
        "title": "LeekPulse: Toggle Monitor (On/Off)"
      }
    ],
    "configuration": {
      "title": "LeekPulse",
      "properties": {
        "leekpulse.interval": {
          "type": "integer",
          "default": 10,
          "enum": [5, 10, 30, 60],
          "description": "How often to test speed (in seconds). Higher is better for saving data."
        },
        "leekpulse.enableAutoStart": {
          "type": "boolean",
          "default": false,
          "description": "If false, LeekPulse starts in PAUSED mode to save data."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}